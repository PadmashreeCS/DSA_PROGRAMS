#include <stdio.h>
#include <string.h>
#define SIZE 100

char input[SIZE];      // To store the original string   char input[6] = {'M', 'a', 'd', 'a', 'm', '\0'};
char stack[SIZE];      // Stack to reverse the string
char re_str[SIZE];     // To store the reversed string
int top = -1;

void pushchar(char ch)
{
    stack[++top] = ch;
}

char pop() 
{
    return stack[top--];
}

int main() 
{
    printf("Enter the string: ");
    scanf("%s", input);  

    int len = strlen(input);

    for (int i = 0; i < len; i++)
    {
        pushchar(input[i]);
    }

    for (int i = 0; i < len; i++) 
    {
        re_str[i] = pop();
    }
    re_str[len] = '\0';  

    if (strcmp(input, re_str) == 0) 
    {
        printf("Yes, it is a palindrome.\n");
    } 
    else 
    {
        printf("No, it is not a palindrome.\n");
    }

    return 0;
}
