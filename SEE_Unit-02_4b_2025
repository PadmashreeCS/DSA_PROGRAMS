#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct node
{
    char fruit[20];
    int quantity;
    struct node *next;
};

struct node *front = NULL, *rear = NULL;

/* Enqueue – Add fruits (Arrival) */
void addFruit(char name[], int qty)
{
    struct node *newnode = (struct node*)malloc(sizeof(struct node));
    strcpy(newnode->fruit, name);
    newnode->quantity = qty;
    newnode->next = NULL;

    if (rear == NULL)
    {
        front = rear = newnode;
    }
    else
    {
        rear->next = newnode;
        rear = newnode;
    }

    printf("Added %s (%d units) to inventory.\n", name, qty);
}

/* Dequeue – Remove fruits (Clear oldest stock) */
void removeFruit()
{
    struct node *temp;

    if (front == NULL)
    {
        printf("Inventory is empty.\n");
        return;
    }

    temp = front;
    printf("Removed %s (%d units) from inventory.\n",
           temp->fruit, temp->quantity);

    front = front->next;

    if (front == NULL)
        rear = NULL;

    free(temp);
}

/* Display inventory */
void display()
{
    struct node *temp = front;

    if (temp == NULL)
    {
        printf("Inventory is empty.\n");
        return;
    }

    printf("\nCurrent Fruit Inventory (FIFO Order):\n");
    while (temp != NULL)
    {
        printf("%s (%d) -> ", temp->fruit, temp->quantity);
        temp = temp->next;
    }
    printf("NULL\n");
}

int main()
{
    addFruit("Apple", 50);
    addFruit("Banana", 30);
    addFruit("Orange", 40);

    display();

    removeFruit();   // FIFO removal
    display();

    return 0;
}
