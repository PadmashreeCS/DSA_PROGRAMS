// STACK WITH PUSH POP DISPLAY ISEMPTY ISFULL
#include <stdio.h>
#include <stdlib.h>

#define SIZE 5
int stack[SIZE];
int top = -1;


void push()
{
    int value;
    if(top == SIZE-1)
    {
        printf("Stack is Full \n");
    }
    else
    {
        printf("Enter the value to inseart\n");
        scanf("%d",&value);
        top++;
        stack[top]=value;
        printf("Value instarted: %d \n",stack[top]);
    }
}

void pop()
{
    if(top==-1)
    {
        printf("Stak is empty \n");
    }
    else
    {
        printf("Top  value is: %d \n",stack[top]);
        top--;
    }
}

void display()
{
     if(top==-1)
    {
        printf("Stak is empty \n");
    }
    else
    {
        for(int i=top;i>=0;i--)
        {
            printf("%d \n",stack[i]);
        }
    }
}

void isFull()
{
    if(top == SIZE-1)
    {
        printf("True \n");
    }
    else
    {
        printf("false \n");
    }
}

void isEmpty()
{
    if(top == -1)
    {
        printf("True \n");
    }
    else
    {
        printf("false \n");
    } 
}

int main() 
{
    int choice;
    while(1)
    {
        printf("1. Push  2.Pop  3.Display  4.Exit 5.Is Full 6. Is Empty\n");
        printf("Enter option: ");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1: push();
            break;
            case 2: pop();
            break;
            case 3: display();
            break;
            case 4: exit(0);
            break;
            case 5: isFull();
            break;
            case 6: isEmpty();
            break;
            default: printf("Inavlid chooice");
        }
    }

    return 0;
}
